<UserControl x:Class="LibraryManagement.AdminBooks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="332" VerticalAlignment="Top" Width="655" Margin="10,30,-10,0">
            <DataGrid IsReadOnly="True" Height="333" Margin="0,0,24,0" x:Name="dgBooks" AutoGenerateColumns="False" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding BookId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Titre" Binding="{Binding Title}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Autheur" Binding="{Binding Author}"></DataGridTextColumn>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Prix" Binding="{Binding Price}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Copies" Binding="{Binding Copies}"></DataGridTextColumn>
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="BtnEdit" Content=" Modifier " Click="BtnEdit_Click"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="BtnDelete" Content=" Supprimer " Click="BtnDelete_Click"></Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button Content="Ajouter Livre" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,0,0,0" Name="BtnAdd" Click="BtnAdd_Click"/>
        <Label Content="Book Section" HorizontalAlignment="Left" Margin="521,-7,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="NORTHEN" FontSize="20"/>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="116,0,0,0" VerticalAlignment="Top" Width="72" Name="btnRefresh" Click="BtnRefresh_Click_1"/>


    </Grid>
</UserControl>
