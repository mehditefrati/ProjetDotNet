@model Book

@{
    ViewData["Title"] = "Details";
}
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Title
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">
        

        <div class="col-md-4">
            <ul>
                <li>@Model.Author</li>
                <li>Copies: @Model.Copies</li>
                <li>PRIX: @Model.Price DH</li>
            </ul>
            <div class="mt-3">
                <!-- Inside the Details.cshtml view -->
                <div class="mt-3">
                    <form method="post" asp-action="Reserve">
                        <input type="hidden" name="documentId" value="@Model.BookId" />
                        <div class="form-group">
                            <label for="reservationDays">Number of Reservation Days:</label>
                            <input type="number" class="form-control" id="reservationDays" name="reservationDays" required />
                        </div>
                        <button type="submit" class="btn btn-secondary">Reserve</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>

